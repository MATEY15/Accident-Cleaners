headerRowWidth = 94px // variable

.header
	position relative
	// background-size cover !important
	background-position center bottom !important
	background-repeat no-repeat !important
	min-height 465px
	section
		position relative
		@media screen and (max-width: 720px)
			position initial
	
	.top-line
		position relative
		z-index 10
		background: #3d414e
		c cWhite
		min-height headerRowWidth
	
	.flex-wrapper
		display flex
		justify-content space-between
		align-items center
		min-height headerRowWidth

.bg-header
	position absolute
	left 0
	top 0
	width 100%
	height 100%
	background-size cover !important
	background-position center 0 !important
	background-repeat no-repeat !important
	opacity .1

.logo-top
	&__link
		color: White
		font-family: ProximaNova-Black
		font-size: 30px
		text-decoration none
		@media screen and (max-width: 1030px)
			font-size 26px

.phone-head
	display flex
	flex-direction row
	align-items center
	text-align right
	&__wrapper
		display flex
		flex-direction column
		text-align right
		@media screen and (max-width: 450px)
			display none
	a
		fz(21px)
		ffa(ProximaNova-Regular)
		c White
		text-decoration none
		display inline-block
	.phone-number
		font-size 24px
		font-family: ProximaNova-Bold
		margin-bottom 6px
		@media screen and (max-width: 1030px)
			font-size 22px

.menu-header
	@media screen and (max-width: 992px)
		// padding-top 70px
	&.is-active
		display flex
		// visibility visible
		// opacity 1
		// transition all .25s ease-out
	@media screen and (max-width: 992px)
		position fixed
		top 0
		left 0
		display flex
		align-items center
		justify-content center
		width 100%
		height 100%
		background #9dc5e8
		display none
		// visibility hidden
		// opacity 0
		
	.nav-top
		padding-top 4px
		&__list
			text-align right
			position relative
			@media screen and (max-width: 992px)
				text-align center
		
		&__sub-menu
			position absolute
			left -14px
			top calc(100% + 20px)
			padding-top 35px
			text-align: left
			min-width 240px
			opacity 0
			visibility hidden
			trn(.2s)
			li
				a
					@media screen and (max-width: 992px)
						font-size 18px
						c #54565d
						
			@media screen and (max-width: 992px)
				position relative
				padding-top 0
				opacity 1
				visibility visible
				left 0
			
			ul
				padding 12px 14px 16px
				background: rgba(102, 107, 125, 0.9)
				@media screen and (max-width: 992px)
					background none
					text-align center
					padding-bottom 10px
				li
					&:not(:last-child)
						margin-bottom 6px

		&__list-li
			display inline-block
			@media screen and (max-width: 992px)
				display block
			
			&:hover
				.nav-top__sub-menu
					top 100%
					opacity 1
					visibility visible
			&:not(:last-child)
				margin-right 24px
				@media screen and (max-width: 1120px)
					margin-right 12px
				@media screen and (max-width: 992px)
					margin-right 0
					margin-bottom 8px
			a
				color: White
				font-family: ProximaNova-Regular
				font-size: 18px
				text-decoration none
				trn(.25s)
				&:hover
					c #a0c7e7
					@media screen and (max-width: 992px)
						c #3d414e
				@media screen and (max-width: 992px)
					font-size 22px
					c #3d414e
					

.burger-menu
	position relative
	display none
	cursor pointer
	width 22px
	height 16px
	outline none
	margin-left 40px
	@media screen and (max-width: 992px)
		display block
		z-index 10
	span
		display block
		height 2px
		width 22px
		margin-bottom 5px
		background: cWhite
		&:last-child
			margin-bottom 0

.header-content
	display flex
	flex-direction row
	align-items center
	height calc(100% - 64px)
	text-align center
	color: cWhite
	@media screen and (max-width: 480px)
		text-align left
		align-items flex-start
		padding-top 50px
	&__heading
		font-size 48px
		line-height 58px
		c cWhite
		margin-bottom 12px
		@media screen and (max-width: 600px)
			font-size 40px

	&__paragraph
		font-size 18px
		line-height 26px
		margin-bottom 25px
		@media screen and (max-width: 600px)
			font-size 15px

.flex-contain
	display flex
	flex-direction row
	justify-content flex-end
	@media screen and (max-width: 600px)
		justify-content center

.form-wrapper
	margin-top 32px
	width 264px
	background: #dcdee3
	padding-top 22px
	box-shadow: 0 0 7px 1px rgba(0, 0, 0, 0.63)
	.section-form
		padding 0 20px
		input,
		textarea
			font-size 15px
			c #c7c7c7
			background: #fdfaf3
			width 100%
		input
			height 40px
			padding 0 12px
			margin-bottom 13px
		textarea
			height 98px
			padding 9px 12px
	.form-button
		width 268px
		margin-left -2px
		margin-top 20px

.section-form input::-webkit-input-placeholder {color:#c7c7c7;}
.section-form input::-moz-placeholder          {color:#c7c7c7;}
.section-form input:-moz-placeholder           {color:#c7c7c7;}
.section-form input:-ms-input-placeholder      {color:#c7c7c7;}

.section-form textarea::-webkit-input-placeholder {color:#c7c7c7;}
.section-form textarea::-moz-placeholder          {color:#c7c7c7;}
.section-form textarea:-moz-placeholder           {color:#c7c7c7;}
.section-form textarea:-ms-input-placeholder      {color:#c7c7c7;}

input::-webkit-input-placeholder       {opacity: 1; transition: opacity 0.3s ease;}
input::-moz-placeholder                {opacity: 1; transition: opacity 0.3s ease;}
input:-moz-placeholder                 {opacity: 1; transition: opacity 0.3s ease;}
input:-ms-input-placeholder            {opacity: 1; transition: opacity 0.3s ease;}
input:focus::-webkit-input-placeholder {opacity: 0; transition: opacity 0.3s ease;}
input:focus::-moz-placeholder          {opacity: 0; transition: opacity 0.3s ease;}
input:focus:-moz-placeholder           {opacity: 0; transition: opacity 0.3s ease;}
input:focus:-ms-input-placeholder      {opacity: 0; transition: opacity 0.3s ease;}
textarea::-webkit-input-placeholder       {opacity: 1; transition: opacity 0.3s ease;}
textarea::-moz-placeholder                {opacity: 1; transition: opacity 0.3s ease;}
textarea:-moz-placeholder                 {opacity: 1; transition: opacity 0.3s ease;}
textarea:-ms-input-placeholder            {opacity: 1; transition: opacity 0.3s ease;}
textarea:focus::-webkit-input-placeholder {opacity: 0; transition: opacity 0.3s ease;}
textarea:focus::-moz-placeholder          {opacity: 0; transition: opacity 0.3s ease;}
textarea:focus:-moz-placeholder           {opacity: 0; transition: opacity 0.3s ease;}
textarea:focus:-ms-input-placeholder      {opacity: 0; transition: opacity 0.3s ease;}