.contact
	padding-top 66px
	@media screen and (max-width: 1120px)
		overflow hidden
	.heading
		margin-bottom 20px
	&-info
		text-align center
		margin-bottom 40px
		p
			font-size 20px
			c #3d414e
			&:not(:last-child)
				margin-bottom 8px
			ffa(ProximaNova-Bold)
			span
				ffa(ProximaNova-Regular)
	
.contact-wrapper
	display flex
	flex-direction row
	flex-wrap wrap
	margin 0 -20px
	@media screen and (max-width: 1024px)
		margin 0 -10px
	.contact-items
		width 33.3%
		padding 0 20px
		margin-bottom 22px
		@media screen and (max-width: 1024px)
			padding 0 10px
		@media screen and (max-width: 768px)
			width 50%
		@media screen and (max-width: 480px)
			width 100%
		&--wr
			box-shadow: 0 5px 6px 1px rgba(0, 0, 0, 0.13)
			@media screen and (max-width: 480px)
				max-width 320px
				margin 0 auto
		&__map
			width 100%
			height 180px
			overflow hidden
		&__content
			background cWhite
			padding 14px 22px 26px
			min-height 200px
			h4
				c #fe5e31
				font-size 18px
				ffa(ProximaNova-Bold)
				margin-bottom 4px
			p
				font-size 15px
				c #3d414e
				margin-bottom 20px
			.phone-map
				ffa(ProximaNova-Bold)
				margin-bottom 22px
			.contact-bottom
				text-align center
		
		.contacts-more
			text-align center
			padding-top 58px
			h3
				font-size 18px
				line-height 22px
				ffa(ProximaNova-Bold)
				c #ada6a6
		