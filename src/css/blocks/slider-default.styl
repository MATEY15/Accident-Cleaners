.instructor
	padding-top 85px
	padding-bottom 50px
	.heading
		margin-bottom 48px

.slider-item
	text-align center
	&__img
		position relative
		width 110px
		height 110px
		brr(50%)
		overflow hidden
		margin 0 auto 20px
		img
			position absolute
			top 50%
			left 50%
			tt(-50%, -50%)
	&__heading
		color: #3d414e
		font-size 15px
		ffa(ProximaNova-Semibold)
		margin-bottom 17px
	&__text
		font-size 12px
		c #3d414e
		margin-bottom 9px
	&__link
		font-size 15px
		ffa(ProximaNova-Bold)
		c #fe5e31
		text-decoration none

.slider-events
	.owl-dots
		display none
	.owl-nav
		position absolute
		top 50%
		left 0
		width 100%
		tt(0, -50%)
	.owl-prev,
	.owl-next
		position absolute
		height 38px
		&:hover
			span
				border-color: #fe5e31
		span
			display block
			font-size 0
			width 26px
			height 26px
			border-style: solid
			border-width: 0 4px 4px 0
			border-color: #b5b5b5
			transform: rotateZ(135deg)
			trn(.25s)
	.owl-prev
		left -24px
		@media screen and (max-width: 1130px)
			left 0
		span
			margin-left 12px
	.owl-next
		right -24px
		@media screen and (max-width: 1130px)
			right 0
		span
			margin-right 12px
			transform: rotateZ(-45deg)