.gallery
	padding-top 26px
	@media screen and (max-width: 1200px)
		overflow hidden
	.container-head
		@media screen and (max-width: 1200px)
			padding 0
	.heading
		margin-bottom 15px
	.gallery-wrapper
		display flex
		flex-direction row
		flex-wrap wrap
		margin 0 -5px
		.gallery-items
			width 33.3%
			padding 5px
			@media screen and (max-width: 768px)
				width 50%
			@media screen and (max-width: 480px)
				width 100%
			&:nth-child(4)
				order 5
			&.big-gallery
				width 66.6%
				@media screen and (max-width: 768px)
					width 100%

.gallery-items__img
	position relative
	width 100%
	height 305px
	font-size 0
	overflow hidden
	@media screen and (max-width: 1024px)
		height 240px
	@media screen and (max-width: 900px)
		height 200px
	@media screen and (max-width: 768px)
		height 280px
	@media screen and (max-width: 480px)
		max-width 320px
		margin 0 auto
	img
		position absolute
		top 50%
		left 50%
		width 100%
		height auto
		tt(-50%, -50%)
		font-size 0
		@media screen and (max-width: 768px)
			height 100%
			width auto